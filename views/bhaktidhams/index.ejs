<% layout('layouts/boilerplate')%>
<div id="cluster-map" style="width: 100%; height: 500px;"></div>
<div class="container mt-5 mb-5">	
    <h2 class="text-center">List of Bhaktidham</h2>
    <% for (let bhaktidham of bhaktidhams){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(bhaktidham.images.length) {%>
                        <img class="img-fluid" alt="" src="<%=bhaktidham.images[0].url%>">
                        <% }else {%>
                            <img class="img-fluid" alt=""
                                src="https://res.cloudinary.com/dztrvonhq/image/upload/v1683842313/Jinalaya/prvautjkt6cn4b0rfhg0.jpg">
                            <% } %>
                </div>

                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= bhaktidham.title %>
                        </h5>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= bhaktidham.mulnayak%>
                            </small>
                        </p>
                        <p class="card-text">
                            <%= bhaktidham.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= bhaktidham.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/bhaktidhams/<%=bhaktidham._id%>">View <%=bhaktidham.title%>
                                </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>
</div>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const bhaktidhams = { features: <%- JSON.stringify(bhaktidhams) %>}
</script>

<script src="/js/clusterMap.js"></script>
    
