<% layout('layouts/boilerplate')%>

<h1>List of Bhaktidham</h1>

<div>
    <a href="/bhaktidhams/new">Adds bhaktidham</a>
</div>
<% for (let bhaktidham of bhaktidhams){%>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%=bhaktidham.image%>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= bhaktidham.title %> </h5>
                    <p class="card-text">
                        <small class="text-muted"><%= bhaktidham.mulnayak%></small>
                    </p>
                    <p class="card-text"><%= bhaktidham.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= bhaktidham.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/bhaktidhams/<%=bhaktidham._id%>">View <%=bhaktidham.title%></a>
                </div>
            </div>
        </div>
    </div>
<% }%>


    
